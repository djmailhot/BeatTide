
<%
#   View for a single post. Displays the song view and meta data about the post.
%>

<div class="post">
  <div class="posted_by">
    <strong><%= link_to post.user.username, post.user %></strong> posted:
  </div>
  <%= render :partial => "songs/song", :locals => {:song => post.song} %>
  <div class="info">
    <span class="you_like">
    <% if post.liked_by?(current_user) %>
    You like this
    <% else %>
    <%= link_to_function "Like", "likePost(#{post.id}, this)" %>
    <% end %>
    </span>
    <% if post.like_count == 1 %>
    <span>|</span> <span class="like_count"><%= post.like_count %> person likes this</span>
    <% else %>
    <span>|</span> <span class="like_count"><%= post.like_count %> people like this</span>
    <% end %>
  </div>
</div>
