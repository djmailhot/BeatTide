<%
#   View for a single song. Includes play button and song information.
%>

<div class="song">
    <div class="play_button">
        <%= link_to "Play", "#", :class => 'play_song', :id => song["SongID"] %>
    </div>
    <div class="song_info">
        <span class="song_name"><%= song["SongName"] %></span> <br />
        <span class="song_info">by <strong><%= song["ArtistName"] %></strong>, from <em><%= song["AlbumName"] %></em></span>
    </div>
</div>