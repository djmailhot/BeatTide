<%
#    A view for displaying a list of users. 
#
#    Author:: Alex Miller
%>

<table class="user_list">
  <tr><th>Name</th><th>Username</th><th>Likes</th></tr>
  <% users.each do |user| %>
    <tr>
      <td>
	<%= link_to(user.username) do %>
	<%= user.first_name %> <%= user.last_name %>
	<% end %>
      </td>
      <td>
	<%= user.username %>
      </td>
      <td>
	<%= user.like_count %>        
	<% if user.like_count == 1 %>
           Like
	<% else %>
      	   Likes
	<% end %>
      </td>
    </tr>
  <% end %>
</table>
