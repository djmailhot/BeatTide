<p id="notice"><%= notice %></p>

<p>
  <b>First Name:</b>
  <%= @user.first_name %>
</p>

<p>
  <b>Username:</b>
  <%= @user.username %>
</p>

<%= render 'posts/post_form' %>

<p>
  <b>Feed:</b>
  <table>
    <tr>
      <th>User</th>
      <th>Time</th>
      <th>Song Name</th>
    </tr>
    <% @user.posts.each do |post| %>
    <tr>
      <td><%= post.user.username %></td>
      <td><%= post.created_at %> </td>
      <td><%= post.song_id %> </td>
    </tr>
    <% end %>
  </table>
</p>


<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
