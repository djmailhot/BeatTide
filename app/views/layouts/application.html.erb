<%
#   Layout for top level application views.
%>
<!DOCTYPE html>
<html>
<head>
  <title>BeatTide</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <link href='http://fonts.googleapis.com/css?family=Nixie+One|Rokkitt|Bree+Serif' rel='stylesheet' type='text/css'>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="container">
    <div id="header_container">
        <div id="header">
            <%= image_tag "logo_small.png" %>
        </div>
    </div>
    <div id="content">
        <div class="module" id="login">
            <% if current_user %>
              Signed in as <strong><%= current_user.username %></strong> | <%= link_to "Sign Out", signout_path %>
            <% else %>
              <strong>Not signed in.</strong>
            <% end %>
        </div>
        
        <%= yield %>
        
        <div id="footer">Copyright BeatTide</div>
    </div>
</div>

</body>
</html>
